{
  "_description": "DeepSpeed ZeRO-3 Configuration for Multi-GPU Full Fine-tuning",
  "_target_hardware": "2x A100 40GB GPUs",
  "_model_size": "Qwen2.5-1.5B (approximately 3GB parameters)",
  
  "train_batch_size": 32,
  "train_micro_batch_size_per_gpu": 1,
  "gradient_clipping": 1.0,
  
  "zero_optimization": {
    "stage": 3,
    "cpu_offload": true,
    "contiguous_gradients": true,
    "overlap_comm": true,
    "reduce_scatter": true,
    "reduce_bucket_size": 500000000,
    "allgather_bucket_size": 200000000,
    "stage3_prefetch_bucket_size": 50000000,
    "stage3_param_persistence_threshold": 100000,
    "stage3_max_live_parameters": 1000000000,
    "stage3_max_reuse_distance": 1000000000,
    "stage3_gather_16bit_weights_on_model_save": true,
    "round_robin_gradients": true,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true,
      "buffer_count": 4,
      "fast_init": false
    },
    "offload_param": {
      "device": "cpu",
      "pin_memory": true,
      "buffer_count": 5,
      "buffer_size": 100000000,
      "max_in_cpu": 1000000000
    },
    "sub_group_size": 1000000000,
    "mics_shard_size": -1,
    "mics_hierarchical_params_gather": false
  },
  
  "bf16": {
    "enabled": true,
    "auto_cast": false,
    "loss_scale": 0,
    "initial_scale_power": 16,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  
  "fp16": {
    "enabled": false
  },
  
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 5e-6,
      "betas": [0.9, 0.95],
      "eps": 1e-5,
      "weight_decay": 0.01,
      "correct_bias": true,
      "adam_w_mode": true
    }
  },
  
  "scheduler": {
    "type": "WarmupCosineLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 5e-6,
      "warmup_num_steps": 100,
      "total_num_steps": 10000,
      "warmup_type": "linear"
    }
  },
  
  "activation_checkpointing": {
    "partition_activations": true,
    "cpu_checkpointing": true,
    "contiguous_memory_optimization": false,
    "number_checkpoints": null,
    "synchronize_checkpoint_boundary": false,
    "profile": false
  },
  
  "gradient_accumulation_steps": 16,
  "steps_per_print": 10,
  "wall_clock_breakdown": false,
  "memory_breakdown": false,
  "dump_state": false,
  
  "flops_profiler": {
    "enabled": false,
    "profile_step": 1,
    "module_depth": -1,
    "top_modules": 1,
    "detailed": true,
    "output_file": null
  },
  
  "comms_logger": {
    "enabled": false,
    "verbose": false,
    "prof_all": false,
    "debug": false
  },
  
  "tensorboard": {
    "enabled": false,
    "output_path": "./logs/tensorboard/",
    "job_name": "DeepSpeedJobName"
  },
  
  "data_efficiency": {
    "enabled": false,
    "seed": 42,
    "data_sampling": {
      "enabled": false,
      "num_epochs": 1000,
      "num_workers": 0,
      "curriculum_learning": {
        "enabled": false
      }
    },
    "data_routing": {
      "enabled": false,
      "random_ltd": {
        "enabled": false,
        "layer_token_lr_schedule": {
          "enabled": false
        }
      }
    }
  },
  
  "compilation": {
    "enabled": false
  },
  
  "monitor_config": {
    "enabled": true,
    "tag": "qwen_grpo_training",
    "csv_monitor": {
      "enabled": true,
      "output_path": "./logs/monitor/",
      "job_name": "qwen_grpo_monitor"
    },
    "wandb": {
      "enabled": true,
      "team": null,
      "group": "qwen2.5_1.5b_grpo",
      "project": "skyrl_grpo_training"
    },
    "tensorboard": {
      "enabled": false,
      "output_path": "./logs/tensorboard/",
      "job_name": "qwen_grpo_tensorboard"
    }
  }
}